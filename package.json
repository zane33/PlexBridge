{
  "name": "plextv",
  "version": "1.0.0",
  "description": "IPTV to Plex Bridge Interface",
  "main": "server/index.js",
  "scripts": {
    "start": "NODE_ENV=production pm2-runtime server/index.js --name plextv",
    "dev": "NODE_ENV=development nodemon server/index.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "postinstall": "npm run install-client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker build -t plextv .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.5",
    "node-ssdp": "^4.0.1",
    "xml2js": "^0.6.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "sqlite3": "^5.1.6",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "m3u8-parser": "^7.1.0",
    "node-rtsp-stream": "^0.0.9",
    "udp-proxy": "^0.1.2",
    "stream-transcoder": "^0.0.5",
    "redis": "^4.6.10",
    "pm2": "^5.3.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": ["plex", "iptv", "streaming", "hdhomerun", "epg"],
  "author": "PlexTV Team",
  "license": "MIT"
}
