{
  "name": "plextv",
  "version": "1.0.0",
  "description": "IPTV to Plex Bridge Interface",
  "main": "server/index.js",
  "scripts": {
    "start": "NODE_ENV=production pm2-runtime server/index.js --name plextv",
    "dev": "NODE_ENV=development nodemon server/index.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test tests/e2e/smoke-tests.spec.js",
    "test:smoke:headed": "playwright test tests/e2e/smoke-tests.spec.js --headed",
    "test:critical": "playwright test tests/e2e/critical-path-tests.spec.js",
    "test:critical:headed": "playwright test tests/e2e/critical-path-tests.spec.js --headed",
    "test:all": "npm run test && npm run test:e2e",
    "test:quick": "npm run test:critical && npm run test:smoke",
    "test:e2e:streaming": "playwright test tests/e2e/streaming-enhancements-comprehensive.spec.js tests/e2e/enhanced-m3u-import-advanced.spec.js tests/e2e/drag-drop-channel-reordering-enhanced.spec.js tests/e2e/websocket-streaming-updates-comprehensive.spec.js",
    "test:e2e:streaming:headed": "playwright test tests/e2e/streaming-enhancements-comprehensive.spec.js tests/e2e/enhanced-m3u-import-advanced.spec.js tests/e2e/drag-drop-channel-reordering-enhanced.spec.js tests/e2e/websocket-streaming-updates-comprehensive.spec.js --headed",
    "test:e2e:responsive": "playwright test tests/e2e/responsive-design-comprehensive.spec.js",
    "test:e2e:api": "playwright test tests/e2e/api-endpoints-validation-comprehensive.spec.js",
    "test:e2e:comprehensive": "playwright test tests/e2e/streaming-enhancements-comprehensive.spec.js tests/e2e/enhanced-m3u-import-advanced.spec.js tests/e2e/drag-drop-channel-reordering-enhanced.spec.js tests/e2e/responsive-design-comprehensive.spec.js tests/e2e/api-endpoints-validation-comprehensive.spec.js tests/e2e/websocket-streaming-updates-comprehensive.spec.js",
    "docker:build": "docker build -t plextv .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "m3u8-parser": "^7.1.0",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-rtsp-stream": "^0.0.9",
    "node-ssdp": "^4.0.1",
    "pm2": "^5.3.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.5",
    "stream-transcoder": "^0.0.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.54.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "plex",
    "iptv",
    "streaming",
    "hdhomerun",
    "epg"
  ],
  "author": "PlexTV Team",
  "license": "MIT"
}
