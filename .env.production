# Production Environment Variables for PlexBridge
# Deploy at 192.168.3.148:3000

# Network configuration for production
HOST_IP=192.168.3.148
HTTP_PORT=3000
STREAM_PORT=3000
DISCOVERY_PORT=1900
ADVERTISED_HOST=192.168.3.148
BASE_URL=http://192.168.3.148:3000

# Application environment
NODE_ENV=production

# Storage paths
DB_PATH=/data/database/plextv.db
LOG_PATH=/data/logs
CACHE_PATH=/data/cache
LOGOS_PATH=/data/logos

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Database configuration
DB_POOL_SIZE=5
DB_BUSY_TIMEOUT=5000
DB_WAL_MODE=true
DB_CHECKPOINT_INTERVAL=1000

# WebSocket configuration
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=20000
WS_RECONNECT_DELAY=1000
WS_MAX_RECONNECT_DELAY=5000

# Health monitoring
HEALTH_CHECK_INTERVAL=60000
DB_HEALTH_CHECK_INTERVAL=60000

# Device identification
DEVICE_UUID=plextv-production-uuid-001
DEVICE_NAME=PlexBridge Production
DEVICE_ID=PLEXPROD001
TUNER_COUNT=5

# Legacy PORT support
PORT=3000