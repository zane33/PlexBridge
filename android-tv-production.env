# Android TV Production Environment Configuration
# These variables fix the Android TV streaming issues

# CRITICAL: Fix IP address mismatch for production deployment
ADVERTISED_HOST=192.168.3.148

# Android TV specific configuration
ANDROID_TV_SESSION_TIMEOUT=300000
CONSUMER_CLEANUP_INTERVAL=300000

# Enhanced logging for Android TV troubleshooting
LOG_LEVEL=info
DEBUG_ANDROID_TV=true

# Stream stability improvements
MAX_CONCURRENT_STREAMS=5
STREAM_TIMEOUT=300000
FFMPEG_RECONNECT_ATTEMPTS=3

# Database optimization to prevent cleanup errors
DB_WAL_MODE=true
DB_BUSY_TIMEOUT=10000

# HDHomeRun emulation improvements
DEVICE_UUID=plexbridge-androidtv-001
TUNER_COUNT=4